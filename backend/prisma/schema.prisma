model Payment {
  id         Int      @id @default(autoincrement())
  employeeId Int
  amount     Float
  mode       PaymentMode
  date       DateTime  @default(now())
  receiptUrl String?
  employee   Employee  @relation(fields: [employeeId], references: [id])
}

enum PaymentMode {
  ESPECES
  VIREMENT
  ORANGE_MONEY
  WAVE
}

enum PeriodType {
  MENSUEL
  HEBDO
  JOURNALIER
}

model Employee {
  id           Int      @id @default(autoincrement())
  fullName     String
  position     String
  contractType ContractType
  salary       Float
  bankDetails  String?
  isActive     Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  payments     Payment[]
}

enum ContractType {
  JOURNALIER
  FIXE
  HONORAIRE
}
